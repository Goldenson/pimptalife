<div class="container center-align">
  <div class="row">
	<h2>Forgot your password?</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: "col s12", method: :post}) do |f| %>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="input-field col s6 offset-s3">
           <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>
      </div>
  	  <div class="row">
        <div class="input-field col s6 offset-s3">
          <%= f.button "Send me reset password instructions", class: "waves-effect waves-light btn col s12", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Sending instructions..."} %>
        </div>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
  </div>
</div>
