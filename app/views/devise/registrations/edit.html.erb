<div class="container center-align">
  <div class="row">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "col s12", method: :put}) do |f| %>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="input-field col s12 m6 offset-m3">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12 m6 offset-m3">
          <%= f.label :email %><br />
          <%= f.email_field :email %>
        </div>
      </div>
      <!-- < if devise_mapping.confirmable? && resource.pending_reconfirmation? %> -->
        <!-- <div>Currently waiting confirmation for: <=resource.unconfirmed_email %></div> -->
      <!-- < end %> -->

      <!-- Display password only for people who signin in -->
      <div class="row">
        <div class="input-field col s12 m6 offset-m3">
          <%= f.label :password %>
          <!-- <i>(leave blank if you don't want to change it)</i><br /> -->
          <!-- < if @validatable %> -->
          <!-- <em>(<%= @minimum_password_length %> characters minimum)</em>  < end %><br />-->
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12 m6 offset-m3">
          <%= f.label :current_password %>
          <!-- <i>(we need your current password to confirm your changes)</i><br /> -->
          <%= f.password_field :current_password, autocomplete: "off" %>
        </div>
      </div>


      <div class="row">
        <div class="input-field col s12 m6 offset-m3">
          <%= f.button "Update", class: "waves-effect waves-light btn col s12", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Updating..."} %>
        </div>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    <h3>Cancel my account</h3>
    <div class="col s12 m6 offset-m3">
      <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?",  disable_with: "<i class='fa fa-spinner fa-spin'></i> Deleting..."}, method: :delete, class: 'waves-effect waves-light btn col s12' %></p>
      <%= link_to "Back", :back %>
    </div>
  </div>
</div>
