<%= form_for(@pimp) do |f| %>
  <% if @pimp.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pimp.errors.count, "error") %> prohibited this pimp from being saved:</h2>

      <ul>
      <% @pimp.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="input-field col s12 m6 offset-m3">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12 m6 offset-m3">
      <%= f.label :image %>
      <%= f.attachment_field :image %>
    </div>
  </div>
  <div class="row">
  <!-- <div class="field"> -->
    <div class="input-field col s12 m6 offset-m3">
      <%= f.button "Pimp", class: "waves-effect waves-light btn col s12", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Pimping..."} %>
    </div>
  </div>
<% end %>

