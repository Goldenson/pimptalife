<p id="notice"><%= notice %></p>

<h1>Listing Pimps</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>User</th>
      <th>Name</th>
      <!-- <th>Image</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pimps.each do |pimp| %>
      <tr>
        <td><%= image_tag attachment_url(pimp, :image, :fill, 150, 150) %></td>
        <td><%= pimp.user.name %></td>
        <td><%= pimp.name %></td>
        <!-- <td><%= pimp.image_id %></td> -->
        <td><%= link_to 'Edit', edit_pimp_path(pimp) %></td>
        <td><%= link_to 'Destroy', pimp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

