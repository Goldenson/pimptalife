<div class="container">
  <h1>Listing Pimps</h1>
  <p><%= link_to new_pimp_path, class: 'btn-floating btn-large waves-effect waves-light red right' do %>
    <i class="mdi-content-add"></i>
  <% end %></p>
  <table class="responsive-table">
    <thead>
      <tr>
        <th>Image</th>
        <th>User</th>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pimps.each do |pimp| %>
        <tr>
          <td><%= image_tag attachment_url(pimp, :image, :fill, 100, 100) %></td>
          <td><%= pimp.user.name %></td>
          <td><%= pimp.name %></td>
          <td><%= link_to 'Edit', edit_pimp_path(pimp) %></td>
          <td><%= link_to 'Destroy', pimp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>